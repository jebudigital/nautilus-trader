# Crypto Trading Engine Configuration
ENVIRONMENT=dev

# Trader Settings
TRADER_ID=TRADER-001
LOG_LEVEL=INFO

# Binance Configuration
BINANCE__API_KEY=your_binance_api_key_here
BINANCE__API_SECRET=your_binance_api_secret_here
BINANCE__SANDBOX=true

# Infura/Web3 Configuration  
WEB3__PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
WEB3__PRIVATE_KEY=your_ethereum_private_key_here
WEB3__GAS_LIMIT=500000
WEB3__GAS_PRICE_GWEI=20.0

# Risk Management
RISK__MAX_PORTFOLIO_LOSS_PCT=5.0
RISK__MAX_POSITION_SIZE_PCT=10.0
RISK__MAX_LEVERAGE=3.0

# Strategy Settings
STRATEGIES_ENABLED=["uniswap_lending"]